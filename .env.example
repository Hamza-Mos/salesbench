# SalesBench Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# LLM PROVIDER API KEYS (at least one required)
# =============================================================================

# OpenAI (GPT-4o, GPT-4o-mini)
OPENAI_API_KEY=

# Anthropic (Claude 3.5 Sonnet, Claude 3 Opus)
ANTHROPIC_API_KEY=

# OpenRouter (100+ models via unified API)
OPENROUTER_API_KEY=

# xAI (Grok models)
XAI_API_KEY=

# Together AI (Llama, Mixtral, open models)
TOGETHER_API_KEY=

# Google (Gemini models)
GOOGLE_API_KEY=

# Prime Intellect
PRIMEINTELLECT_API_KEY=


# =============================================================================
# GRAFANA CLOUD TELEMETRY (optional - for trace/metrics export)
# =============================================================================

# Enable OpenTelemetry export (set to "true" to enable)
OTEL_ENABLED=false

# OTLP Endpoint - Grafana Cloud or local collector
# Grafana Cloud format: https://otlp-gateway-prod-<region>.grafana.net/otlp
# Regions: us-east-0, us-central-0, us-west-0, eu-west-0, ap-southeast-0, etc.
# Find your endpoint at: Grafana Cloud Portal -> Your Stack -> OpenTelemetry -> Configure
OTEL_EXPORTER_OTLP_ENDPOINT=https://otlp-gateway-prod-us-east-0.grafana.net/otlp

# OTLP Headers (standard OpenTelemetry env var) - RECOMMENDED
# Format: "Authorization=Basic <base64-encoded-credentials>"
# For Grafana Cloud: base64 encode "instance_id:api_token"
# Generate with: echo -n "INSTANCE_ID:API_TOKEN" | base64
OTEL_EXPORTER_OTLP_HEADERS=Authorization=Basic <base64_of_instance_id:api_token>

# --- OR use these individual Grafana Cloud credentials (alternative) ---

# Grafana Cloud Instance ID (numeric stack ID)
# Find at: Grafana Cloud Portal -> Your Stack -> Details -> Instance ID
# GRAFANA_INSTANCE_ID=

# Grafana Cloud API Token
# Create at: Grafana Cloud Portal -> Your Stack -> API Keys
# Required role: "MetricsPublisher" (for pushing traces and metrics)
# GRAFANA_API_TOKEN=


# =============================================================================
# GRAFANA DASHBOARD ACCESS (optional - for dashboard API access)
# =============================================================================

# Grafana URL (for API access to dashboards)
GRAFANA_URL=http://localhost:3000

# Grafana API Key (for dashboard read/write access)
# Create at: Grafana -> Administration -> API keys
GRAFANA_API_KEY=


# =============================================================================
# PROMETHEUS (optional - alternative metrics backend)
# =============================================================================

# Prometheus Push Gateway endpoint
PROMETHEUS_PUSH_GATEWAY=http://localhost:9091


# =============================================================================
# SUPABASE (optional - for result storage)
# =============================================================================

# Supabase project URL
SUPABASE_URL=

# Supabase anonymous key (for client-side access)
SUPABASE_ANON_KEY=

# Supabase service role key (for server-side access with admin privileges)
SUPABASE_SERVICE_ROLE_KEY=
